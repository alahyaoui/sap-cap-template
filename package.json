{
  "name": "sap-cap-template",
  "version": "1.1.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/hana-client": "^2.19.21",
    "@sap/xsenv": "^4.2.0",
    "@sap/xssec": "^3.6.1",
    "express": "^4",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0.14.0",
    "@cap-js/sqlite": "^1.4.0",
    "@sap/cds-dk": "^7",
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.8",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "cds-serve",
    "start:ts": "cds-ts serve",
    "build": "npm run build:cds && npm run build:ts",
    "build:cds": "echo 'Compiling cds sources...' && cds build && cp .cdsrc.json gen/srv",
    "build:ts": "echo 'Compiling *.ts sources...' && tsc",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier \"**/*.js\" \"**/*.ts\" --check",
    "prettier:fix": "prettier \"**/*.js\" \"**/*.ts\" --write",
    "format": "npm run prettier:fix"
  },
  "cds": {
    "requires": {
      "db": {
        "[development]": {
          "kind": "sql"
        },
        "kind": "hana-cloud"
      },
      "auth": {
        "[development]": {
          "kind": "mocked"
        },
        "[hybrid]": {
          "kind": "dummy"
        },
        "[production]": {
          "kind": "xsuaa"
        }
      },
      "approuter": {
        "kind": "cloudfoundry"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "fiori": {}
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --check --config .prettierrc"
    ],
    "*.ts": [
      "eslint",
      "prettier --check --config .prettierrc"
    ],
    "*.cds": [
      "eslint",
      "prettier --check --config .cdsprettier.json"
    ]
  }
}
